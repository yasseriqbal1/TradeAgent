# Questrade API Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive credentials

# Get your refresh token from: https://www.questrade.com/api
# In API Centre -> Personal Applications -> Generate new token
QUESTRADE_REFRESH_TOKEN=your_refresh_token_here

# Server type: practice or live
QUESTRADE_SERVER_TYPE=practice

# Token will be refreshed automatically every 30 minutes

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tradeagent
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Groq API (for AI report generation)
GROQ_API_KEY=your_groq_api_key_here

# Email Configuration (optional)
EMAIL_TO=your_email@example.com

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
